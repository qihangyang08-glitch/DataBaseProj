Hibernate: 
    select
        utr1_0.id,
        utr1_0.completed_at,
        utr1_0.created_at,
        utr1_0.personal_deadline,
        utr1_0.personal_notes,
        utr1_0.status,
        utr1_0.task_id,
        utr1_0.updated_at,
        utr1_0.user_id 
    from
        user_task_relations utr1_0 
    left join
        users u1_0 
            on u1_0.id=utr1_0.user_id 
    left join
        tasks t1_0 
            on t1_0.id=utr1_0.task_id 
    where
        u1_0.id=? 
        and t1_0.id=?
