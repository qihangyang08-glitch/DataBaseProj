        t1_0.title,
        t1_0.updated_at 
    from
        tasks t1_0 
    where
        t1_0.is_deleted=0 
        and (
            (
                t1_0.task_type='PERSONAL' 
                and t1_0.creator_id=?
            ) 
            or (
                t1_0.task_type='CLASS' 
                and exists(select
                    1 
                from
                    user_task_relations utr1_0 
                where
                    utr1_0.task_id=t1_0.id 
                    and utr1_0.user_id=?)
            )
        ) 
        and (
            (
                t1_0.created_at between ? and ?
            ) 
            or (
                t1_0.deadline between ? and ?
            )
        ) 
